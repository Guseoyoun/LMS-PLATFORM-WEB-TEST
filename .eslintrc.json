{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "next/core-web-vitals"
  ],
  "settings": {
    "react": {
      // eslint-plugin-react가 자동 리액트버전탐지,
      "version": "detect"
    }
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "react-hooks"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}
